					</snowfirstitemfree_adminhtml_block_salesrule_actions_prepareform>
				</observers>
			</adminhtml_block_salesrule_actions_prepareform>
		</events>
	</global>
	<frontend>
		<translate>
			<modules>
				<Snowdog_FirstItemFree>
					<files>
						<default>Snowdog_FirstItemFree.csv</default>
					</files>
				</Snowdog_FirstItemFree>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<translate>
			<modules>
				<Snowdog_FirstItemFree>
					<files>
						<default>Snowdog_FirstItemFree.csv</default>
