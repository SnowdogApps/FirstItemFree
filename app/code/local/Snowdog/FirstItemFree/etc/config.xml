<?xml version="1.0" encoding="utf-8" standalone="no"?>
<config>
	<modules>
		<Snowdog_FirstItemFree>
			<version>0.1.0</version>
		</Snowdog_FirstItemFree>
	</modules>
	<global>
		<models>
			<snowfirstitemfree>
				<class>Snowdog_FirstItemFree_Model</class>
			</snowfirstitemfree>
		</models>
		<helpers>
			<snowfirstitemfree>
				<class>Snowdog_FirstItemFree_Helper</class>
			</snowfirstitemfree>
		</helpers>
		<events>
			<salesrule_validator_process>
				<observers>
					<snowfirstitemfree_salesrule_validator_process>
